// Firestore Security Rules for OlympCom
// These rules allow authenticated users to read/write their own data and chat messages

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow read access to other users for chat functionality
      allow read: if request.auth != null;
    }
    
    // Chat messages - authenticated users can read and write
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Global chat messages - authenticated users can read and write
    match /chats/global/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow listing chats for authenticated users
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
  }
}
